<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_medium_2"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivActiveNowProfile"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/profile_vector"
        android:scaleType="centerCrop"
        />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivActiveNowIcon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_active"
        android:scaleType="centerCrop"
        android:layout_alignBottom="@id/ivActiveNowProfile"
        android:layout_alignEnd="@id/ivActiveNowProfile"
        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Medium"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvActiveNowName"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Thiha"
        android:maxLines="2"
        android:textSize="@dimen/text_small"
        android:gravity="center"
        android:layout_below="@id/ivActiveNowProfile"/>



</RelativeLayout>